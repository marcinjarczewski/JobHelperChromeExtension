{
  "name": "JobHelper",
  "version": "1.0",
  "description": "Filter job offers using your custom filter",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false,
	"css":["injected.css"]
  },
  "permissions": ["activeTab", "declarativeContent", "storage", "scripting", "tabs"],
  "content_scripts" : [{
	"matches": ["https://justjoin.it/*"],
	"js" : ["thirdParty/jquery-3.5.1.min.js", "injectForm.js"],
	"css": ["injected.css"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/16x16.png",
      "32": "images/32x32.png",
      "48": "images/48x48.png",
      "128": "images/128x128.png"
    }
  },
  "icons": {
      "16": "images/16x16.png",
      "32": "images/32x32.png",
      "48": "images/48x48.png",
      "128": "images/128x128.png"
  },
  "manifest_version": 3
}
